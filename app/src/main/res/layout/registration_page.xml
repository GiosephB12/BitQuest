<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_logo"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="22dp"

        />

    <ImageButton
        android:id="@+id/Indietro"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_freccia"
        android:background="@null"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Indietro"
        android:onClick="TornaIndietro"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="14dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_below="@id/Image"
        android:layout_height="wrap_content"
        android:background="@drawable/signup"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/InputNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognome"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/InputCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/InputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nickname"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/InputNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/InputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conferma Password"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/InputConfermaPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/SignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Registrati"
            android:textColor="@color/white"
            android:backgroundTint="@color/green_black"
            android:onClick="Registrati"/>
    </LinearLayout>
</RelativeLayout>